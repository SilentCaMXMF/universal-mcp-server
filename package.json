{
  "name": "universal-mcp-server",
  "version": "1.0.0",
  "description": "ðŸ”Œ Universal MCP (Model Context Protocol) server and client library with plugin system, multi-protocol support, and production-ready features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "docs",
    "examples"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:core && npm run build:client && npm run build:root",
    "build:core": "tsc -p tsconfig.core.json",
    "build:client": "tsc -p tsconfig.client.json",
    "build:root": "tsc src/index.ts --outDir dist --declaration --target es2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build:dev": "tsc -p tsconfig.dev.json",
    "build:prod": "tsc -p tsconfig.prod.json",
    "clean": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/**",
    "test:integration": "vitest run tests/integration/**",
    "test:e2e": "vitest run tests/e2e/**",
    "test:security": "vitest run tests/security/**",
    "test:performance": "vitest run tests/performance/**",
    "test:coverage:unit": "vitest run --coverage --include tests/unit/**",
    "test:coverage:integration": "vitest run --coverage --include tests/integration/**",
    "test:coverage:e2e": "vitest run --coverage --include tests/e2e/**",
    "lint": "eslint src tests examples --ext .ts,.js",
    "lint:fix": "eslint src tests examples --ext .ts,.js --fix",
    "format": "prettier --write src tests examples *.md",
    "format:check": "prettier --check src tests examples *.md",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "release": "npm run build && npm run test:run && npm publish --access public",
    "release:dry": "npm pack --dry-run",
    "docs:dev": "typedoc --watch src/index.ts",
    "docs:build": "typedoc src/index.ts",
    "docs:serve": "npm run docs:build && npx http-server docs/out -p 8080",
    "example:basic": "tsx examples/basic-server.ts",
    "example:client": "tsx examples/client-usage.ts",
    "example:plugins": "tsx examples/plugin-system.ts",
    "example:enterprise": "tsx examples/enterprise-setup.ts",
    "size-check": "npm run build && npx bundlesize",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm run security:audit && npm run lint"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "client",
    "websocket",
    "http",
    "stdio",
    "plugin",
    "typescript",
    "ai",
    "llm",
    "rpc",
    "transport",
    "protocol",
    "universal",
    "enterprise",
    "security",
    "monitoring",
    "metrics",
    "production-ready",
    "nodejs",
    "typescript-first"
  ],
  "author": {
    "name": "Universal MCP Server Team",
    "email": "team@universal-mcp-server.dev",
    "url": "https://universal-mcp-server.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SilentCaMXMF/universal-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/SilentCaMXMF/universal-mcp-server/issues",
    "email": "issues@universal-mcp-server.dev"
  },
  "homepage": "https://github.com/SilentCaMXMF/universal-mcp-server#readme",
  "documentation": "https://universal-mcp-server.dev/docs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/SilentCaMXMF"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "eventemitter3": "^5.0.1",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "jsdom": "^27.4.0",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "bundlesize": "^0.18.1",
    "http-server": "^14.1.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
