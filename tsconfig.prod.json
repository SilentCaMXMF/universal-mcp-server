{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/prod",
    "rootDir": "./src",
    "sourceMap": false,
    "removeComments": true,
    "declaration": true,
    "declarationMap": false,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["tests", "examples", "**/*.test.ts", "**/*.spec.ts"]
}
